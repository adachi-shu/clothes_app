<div class="container">
    <h1 classt="text-center">洋服管理アプリ</h1>
    <div>
        <% if user_signed_in? %>
            ログイン中
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete%>
        <% else %>
            ログイン外
            <%= link_to 'ログイン', user_session_path %>
        <% end %>
    </div>
    <div>
    <% @articles.each do |article| %>
        <%= link_to article do %>
            <div class="col-md-3">
                <% if article.image.attached? %>
                    <div>
                        <%= image_tag article.image %>
                    </div>
                 <% end %>
                <p><%= article.cloth_name %></p>
                <%= article.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </div>
        <% end %>
    <% end %>
    </div>
    <%= link_to '新規作成', new_article_path %>
</div>
