<div class="container">
  <h1 classt="text-center"><%= @articles.cloth_name %></h1>
  <div>
    <div class="col-md-3">
      <% if @articles.image.attached? %>
        <%= image_tag @articles.image %>
      <% end %>
      <p>名前</p>
      <p><%= @articles.cloth_name %></p>
      <p>価格</p>
      <p><%= @articles.cloth_price %></p>
      <p>カテゴリー</p>
      <p><%= @articles.category %></p>
      <p>登録日</p>
      <p><%= @articles.created_at.strftime('%Y/%m/%d') %></p>
      <p>使用回数</p>
      <p><%= @articles.times %></p>
      <p>すてる理由</p>
      <p><%= @articles.reason %></p>

    </div>
  </div>
  <%= link_to '編集', edit_article_path(@articles) %>
  <%= link_to '捨てる', articles_delete_path(@articles) %>
</div>